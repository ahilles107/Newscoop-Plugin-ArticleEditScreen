{% extends 'NewscoopNewscoopBundle::admin_layout.html.twig' %}

{% block admin_title %}{{ parent() }} - {{ message }}{% endblock %}
{% block admin_content %}
<div class="container" style="font-size:12px">
    <div class="row">
    <center>
    	{% if locked %}
        <div class="col-sm-12 col-md-12">
            <div class="alert alert-info">
                <span class="glyphicon glyphicon-info-sign"></span> <strong>{{ 'aes.alerts.lockedHead'|trans }}</strong>
                <hr class="message-inner-separator">
                <p>{{ message }}</p>
                <hr class="message-inner-separator">
                <button type="button" class="btn btn-sm btn-primary">{{ 'aes.btn.unlock'|trans }}</button>
                <button type="button" class="btn btn-sm btn-default">{{ 'aes.btn.view'|trans }}</button>
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">{{ 'aes.btn.goback'|trans }}</button>
            </div>
        </div>
        {% else %}
        <div class="col-sm-12 col-md-12">
            <div class="alert alert-danger">
                <span class="glyphicon glyphicon-hand-right"></span> <strong>{{ 'aes.alerts.notfoundHead'|trans }}</strong>
                <hr class="message-inner-separator">
                <p>{{ message }}</p>
                <hr class="message-inner-separator">
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">{{ 'aes.btn.goback'|trans }}</button>
            </div>
        </div>
        {% endif %}
    </center>
    </div>
</div>
{% endblock %}